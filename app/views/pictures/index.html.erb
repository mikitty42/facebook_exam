<h1>メッセージ一覧</h1>
<table>
  <tr>
    <th>画像</th>
    <th>内容</th>
    <th>投稿者</th>
  </tr>
  <% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.image %></td>
    <td><%= picture.content %></td>
    <td><%= picture.user.name %></td>
    <td><%= link_to "メッセージの詳細を確認する",picture_path(picture.id) %></td>
    <td><%= link_to "メッセージを編集する",edit_picture_path(picture.id) %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <% end %>
</table>
<%= link_to "メッセージを作成する",new_picture_path %>
